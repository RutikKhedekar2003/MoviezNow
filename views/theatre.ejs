                <tbody class="table-header">
               <% 
                    if(rows.length>0){
                        let count=0;
                        let prev_date="",prev_tid=" ",i=0;
                        while(i<rows.length){  
                           prev_date = rows[i].screening_date;
                            prev_tid = rows[i].tid;
                        %>
                  <tr>
                    <td><%= rows[i].tname %></td>
                    <td class="bookingTime" id="seat-booking-time"> 
                        <%
                            count=0;
                            while(i<rows.length && rows[i].tid===prev_tid && rows[i].screening_date===prev_date){
                                prev_tid = rows[i].tid;
                                var time = (rows[i].timing).substring(0,5);
                                
                        %>
                        <!--  /seats/:hid/:tid/:timing/:screening_date  -->
                        <a class="btn btn-info" id="seat-booking/<%= i+'-'+count %>"  href="/seats/<%= rows[i].hid %>/<%= rows[i].tid %>/<%= rows[i].timing %>/<%= rows[i].screening_date %>"><%= time %>
                        </a>
                        <%
                            count++;
                            i++;
                        }
                        %>
                    </td>
                    <td>
                      <%= rows[i-count].screening_date %>
                    </td>
                  </tr>
                <%
                    }
                } else {  %>
                    <tr>
                    <td>No Current Shows available.</td>
                  </tr>
                <% 
